<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
 <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
 <servlet>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <servlet-class>UpdateStatusServlet</servlet-class>
    </servlet>
 <servlet>
        <servlet-name>RetrieveRequestsServlet</servlet-name>
        <servlet-class>RetrieveRequestsServlet</servlet-class>
    </servlet>
 <servlet>
        <servlet-name>FLoginServlet</servlet-name>
        <servlet-class>FLoginServlet</servlet-class>
    </servlet>
<servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>AddStudentServlet</servlet-class>
    </servlet>
<servlet>
        <servlet-name>AddFacultyServlet</servlet-name>
        <servlet-class>AddFacultyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
<servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
<servlet-mapping>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <url-pattern>/UpdateStatusServlet</url-pattern>
    </servlet-mapping>
<servlet-mapping>
        <servlet-name>RetrieveRequestsServlet</servlet-name>
        <url-pattern>/RetrieveRequestsServlet</url-pattern>
    </servlet-mapping>
<servlet-mapping>
        <servlet-name>FLoginServlet</servlet-name>
        <url-pattern>/FLoginServlet</url-pattern>
    </servlet-mapping>
<servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/AddStudentServlet</url-pattern>
    </servlet-mapping>
<servlet-mapping>
        <servlet-name>AddFacultyServlet</servlet-name>
        <url-pattern>/AddFacultyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
<!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>Login_cg.html</welcome-file>
    </welcome-file-list>
</web-app>
